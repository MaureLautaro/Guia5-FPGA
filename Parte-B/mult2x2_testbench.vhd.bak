	A1 <= '0'; A0 <= '1'; B1 <= '0'; B0 <= '1'; wait for 30ns;
	A1 <= '0'; A0 <= '1'; B1 <= '1'; B0 <= '0'; wait for 30ns;
	A1 <= '0'; A0 <= '1'; B1 <= '1'; B0 <= '1'; wait for 30ns;
	A1 <= '1'; A0 <= '0'; B1 <= '0'; B0 <= '0'; wait for 30ns;
	A1 <= '1'; A0 <= '0'; B1 <= '0'; B0 <= '1'; wait for 30ns;
